[if (genService.hasInputCollectionAssociations() or genService.hasFileAttributes())]
	public function save(Validation $validation = NULL)
	{
[for (genIncludedFeature : GenServiceIncludedFeature | genService.fileAttributes())]
		$this->_save_[genIncludedFeature.modelPropertyName()/]();
[/for]
		parent::save($validation);
[if (genService.hasInputCollectionAssociations())]

		foreach ($this->_association_changes AS $change)
			if ($change['['/]'op'[']'/] == 'add')
				$this->add($change['['/]'alias'[']'/], $change['['/]'value'[']'/]);
			else
				$this->remove($change['['/]'alias'[']'/], $change['['/]'value'[']'/]);
[/if]
	}

