[for (genIncludedFeature : GenServiceIncludedFeature | genService.fileAttributes())]
[let genFile : GenSingletonFile = genIncludedFeature.oclAsType(GenServiceIncludedSingletonElement).genFeature.oclAsType(GenSingletonFile)]
	private function _save_[genIncludedFeature.modelPropertyName()/]()
	{
		$validation = Validation::factory($_FILES);
		$validation
			->rules('[genIncludedFeature.modelPropertyName()/]', array(
[if (genIncludedFeature.isRequired())]
				array('not_empty'),
				array('Upload::not_empty'),
[/if]
				array('Upload::valid'),
				array('Upload::size', array(':value', [genFile.ormFeature.maximumUploadSize/])),
[if (genFile.ormFeature.validUploadExtensions->notEmpty())]
				array('Upload::type', array(':value', array([for (extension : String | genFile.ormFeature.validUploadExtensions) separator(', ')]'[extension/]'[/for]))),
[/if]
			));
		if ($validation->check() === FALSE)
			throw new ORM_Validation_Exception($this->errors_filename(), $validation);

		if ($_FILES['['/]'[genIncludedFeature.modelPropertyName()/]'[']'/]['['/]'error'[']'/] === UPLOAD_ERR_NO_FILE)
			return;

		if (!empty($this->[genFile.columnName()/])) 
			$filename = pathinfo($this->[genFile.columnName()/], PATHINFO_FILENAME);
		else
			$filename = pathinfo($_FILES['['/]'[genIncludedFeature.modelPropertyName()/]'[']'/]['['/]'name'[']'/], PATHINFO_FILENAME);
		$extension = pathinfo($_FILES['['/]'[genIncludedFeature.modelPropertyName()/]'[']'/]['['/]'name'[']'/], PATHINFO_EXTENSION);
[if (genFile.ormFeature.uploadsWithinWebsite)]
		$filepath = Upload::save($_FILES['['/]'[genFile.modelPropertyName()/]'[']'/], $filename . '.' . $extension, DOCROOT . '[genFile.ormFeature.relativeUploadDirectory/]');
		$this->[genFile.columnName()/] = '[genFile.ormFeature.relativeUploadDirectory/]/' . $filename . '.' . $extension;
[else]
		$filepath = Upload::save($_FILES['['/]'[genFile.modelPropertyName()/]'[']'/], $filename . '.' . $extension, 'c:\websites\files');
[/if]
	}

