[/if]
[if (genService.hasInputCollectionAssociations())]
	protected $_association_changes = array();

	public function values(array $values, array $expected = NULL)
	{
		parent::values($values, array_diff($expected, array([for
(genIncludedFeature : GenServiceIncludedFeature | genService.inputCollectionAssociations())
separator (', ')]'[genIncludedFeature.columnName()/]'[/for])));
[for (genIncludedFeature : GenServiceIncludedFeature | genService.inputCollectionAssociations())]
[let genIncludedAssociation : GenServiceIncludedCollectionAssociation = genIncludedFeature.oclAsType(GenServiceIncludedCollectionAssociation)]

		if (in_array('[genIncludedFeature.columnName()/]', $expected))
		{
			$current = array();
			foreach ($this->[genIncludedFeature.modelPropertyName()/]_as_array() AS $value)
				$current['['/][']'/] = $value->id;
			if (array_key_exists('[genIncludedFeature.columnName()/]', $values))
				foreach ($values['['/]'[genIncludedFeature.columnName()/]'[']'/] AS $selected)
				{
					$key = array_search($selected, $current);
					if ($key !== FALSE)
						unset($current['['/]$key[']'/]);
					else
						$this->_association_changes['['/][']'/] = array(
							'op' => 'add',
							'alias' => '[genIncludedAssociation.modelPropertyName()/]',
							'value' => $selected
						);
				}
			foreach ($current AS $removed)
				$this->_association_changes['['/][']'/] = array(
					'op' => 'remove',
					'alias' => '[genIncludedAssociation.modelPropertyName()/]',
					'value' => $removed
				);
		}
[/let]
[/for]
	}

[/if]
[if (genService.hasInputCollectionAssociations())]
[for (genIncludedFeature : GenServiceIncludedFeature | genService.inputCollectionAssociations())]
[let genIncludedAssociation : GenServiceIncludedCollectionAssociation = genIncludedFeature.oclAsType(GenServiceIncludedCollectionAssociation)]
	public function [genIncludedAssociation.modelPropertyName()/]_as_array()
	{
		if (!$this->loaded())
			return array();

		$value_array = array();
		foreach ($this->[genIncludedAssociation.modelPropertyName()/]->find_all() as $value)
			$value_array['['/][']'/] = $value;
		return $value_array;
	}

