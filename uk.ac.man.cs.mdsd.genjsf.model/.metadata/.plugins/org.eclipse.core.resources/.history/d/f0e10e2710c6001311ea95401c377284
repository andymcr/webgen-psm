	@Override
	public void notifyChanged(Notification notification) {
		updateChildren(notification);

		switch (notification.getFeatureID(Attribute.class)) {
			case WebsitePackage.ATTRIBUTE__DEFAULT_VALUE:
			case WebsitePackage.ATTRIBUTE__PLACEHOLDER:
			case WebsitePackage.ATTRIBUTE__VALIDATION_PATTERN:
