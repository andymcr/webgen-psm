				 WebsiteFactory.eINSTANCE.createSelectAction()));

		newChildDescriptors.add
			(createChildParameter
				(WebsitePackage.Literals.INLINE_ACTION_CONTAINER__ACTIONS,
				 WebsiteFactory.eINSTANCE.createDeleteAction()));
	}

